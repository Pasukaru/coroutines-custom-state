<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{YYYY-MM-dd HH:mm:ss.SSS} [%thread] %-5level %-40.40logger{39} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="TRACE">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="org.reflections.Reflections" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="my.company.app.lib.tx.TransactionContext" level="INFO"/>
    <logger name="ktor.application" level="INFO"/>
    <logger name="org.jooq" level="OFF"/>
    <logger name="org.eclipse.jetty" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="io.netty" level="INFO"/>
</configuration>
